@model IEnumerable<ProductItemListModel>
@{
    ViewData["Title"] = "Products";
}

<h1>Index</h1>


<div class="container">
    <a asp-action="Create" asp-fragment="" class="btn btn-primary">Add new</a>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card border-info mb-3" style="width: 18rem;">
                    <img src="~/Regular-Sample-Box.png" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Category</p>
                        <p class="card-text">Rate @item.AverageScore</p>
                        <p class="card-text">Price from @item.BestPriceNow $</p>
                        <a asp-action="Details" asp-route-id="@item.Id" asp-fragment="" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>