@model IEnumerable<ProductItemListViewModel>
@{
    ViewData["Title"] = "Products";
}

<h1>Products List</h1>


<div class="container">
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create" asp-fragment="" class="btn btn-primary mb-3">Add new</a>
    }
    <div class="row row-cols-auto">
        @foreach (var item in Model)
        {
            <div class="col mb-3">
                <div class="card h-100" style="width: 18rem;">
                    <div style = "display: flex;  align-items: center;  justify-content: center; height: 250px">
                    @if (!String.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" class="card-img-top" style = "max-width: 250px; max-height: 250px; align-items:center">
                    }
                    else
                    {
                        <img src="~/Regular-Sample-Box.png" class="card-img-top">               
                    }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title ">@item.Name</h5>
                    </div>
                    <div class="card-footer bg-transparent">
                        <p class="card-text">@item.Category</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <p class="card-text">Rate @item.AverageScore</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <p class="card-text">Price from @item.BestPriceNow @item.CurrencyCode</p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@item.Id" asp-fragment="" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>